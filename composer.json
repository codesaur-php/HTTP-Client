{
    "name": "codesaur/http-client",
    "description": "HTTP хүсэлт илгээх болон MIME имэйл боловсруулах/илгээх энгийн хөнгөн жинтэй, объект хандалтат http-client компонент",
    "keywords": [
        "http", "client", "http-client", "mail", "mongol", "mongolia", "монгол", "codesaur", "narankhuu", "coden", "кодзавр", "наранхүү", "коден"
    ],
    "homepage": "https://github.com/codesaur-php",
    "authors": [
        {
            "name": "Narankhuu (+976 99000287)",
            "email": "codesaur@gmail.com",
            "homepage": "https://github.com/codesaur"
        }
    ],
    "require": {
        "php": "^8.2.1",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "codesaur\\Http\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "codesaur\\Http\\Client\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:all": [
            "@test:unit",
            "@test:integration"
        ]
    },
    "license": "MIT",
    "minimum-stability": "dev"
}
